datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Recipe {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  ingredients Ingredient[]
  Schedule    Schedule[]
}

model Ingredient {
  id       Int    @id @default(autoincrement())
  name     String
  quantity String
  recipeId Int
  recipe   Recipe @relation(fields: [recipeId], references: [id])
}

model Schedule {
  id       Int    @id @default(autoincrement())
  day      String
  recipeId Int
  recipe   Recipe @relation(fields: [recipeId], references: [id])
}
